<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="180px"
        android:layout_height="180px"
        android:id="@+id/ivMap"
        android:background="@drawable/map_marker"
        android:onClick="onClickListener"
        android:layout_above="@+id/tvService"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/ParkingMap"
        android:id="@+id/tvMap"
        android:layout_alignTop="@+id/tvService"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="180px"
        android:layout_height="180px"
        android:id="@+id/ivService"
        android:src="@drawable/spanner_logo"
        android:layout_marginTop="44dp"
        android:onClick="onClickListener"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/veloservices"
        android:id="@+id/tvService"
        android:onClick="onClickListener"
        android:layout_below="@+id/ivService"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivAvailable"
        android:layout_marginTop="38dp"
        android:src="@drawable/pump"
        android:layout_below="@+id/tvMap"
        android:layout_centerHorizontal="true"
        android:onClick="onClickListener"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/available_services"
        android:id="@+id/tvAvailable"
        android:layout_below="@+id/ivAvailable"
        android:layout_centerHorizontal="true"
        android:onClick="onClickListener"/>
</RelativeLayout>
